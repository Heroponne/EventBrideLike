<!DOCTYPE html>
<html>
  <body>

<!-- Alertes -->

    <% if flash[:danger]%>
      <div class="alert alert-danger" role="alert">
        <%= flash[:danger] %>
      </div>
    <% end %>
    <h1>Crée un événement !</h1>

<!-- Page de création d'événement -->

    <p>Remplis les champs suivants :</p>
      <%= form_tag url_for(action: 'create'), method: 'post' do %>
        <div class="form-group">
          <%= label_tag 'Titre (5-140 caractères)' %>
          <%= text_field_tag 'title', @title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag 'Date de début' %>
          <%= text_field_tag 'start_date', @start_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag 'Durée (en minutes, multiple de 5)' %>
          <%= text_field_tag 'duration', @duration, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag 'Description (minimum 20 caractères, max 1000)' %>
          <%= text_area_tag 'description', @description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag 'Prix (entre 1 et 1000 euros)' %>
          <%= text_field_tag 'price', @price, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag 'Lieu' %>
          <%= text_field_tag 'location', @location, class: 'form-control' %>
        </div>
        <div>
          <%= submit_tag "Créer l'événement", class: "btn btn-primary" %>
        </div>
      <% end %>    
  </body>
</html>
