<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

  </head>
  <body>
  	<br><br>
  	<div class="container">

      <h1>Informations de l'événement :</h1>
      <br>

      <div class="row">
        <div class="col-4">Titre :</div>
        <div class="col-4"><%= @event.title %></div>
      </div>

      <div class="row">
        <div class="col-sm-4">Date de début :</div>
        <div class="col-sm-4"><%= @event.start_date %></div>
      </div>

      <div class="row">
        <div class="col-md-4">Durée :</div>
        <div class="col-md-4"><%= @event.duration %></div>
      </div>

      <div class="row">
        <div class="col-lg-4">Description :</div>
        <div class="col-lg-4"><%= @event.description %></div>
      </div>

      <div class="row">
        <div class="col-lg-4">Prix :</div>
        <div class="col-lg-4"><%= @event.price %></div>
      </div>

      <div class="row">
        <div class="col-lg-4">Lieu :</div>
        <div class="col-lg-4"><%= @event.location %></div>
      </div>

      <div class="row">
        <div class="col-lg-4">Organisateur :</div>
        <div class="col-lg-4"><%= @event.admin.first_name %><%= @event.admin.last_name %></div>
      </div>
    </div>
  </body>
</html>
